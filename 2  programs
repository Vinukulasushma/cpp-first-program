#include<iostream>
using namespace std;

int main()
{
	int a,b;
	int product;
	cout<<"enter the value of a:";
	cin>>a;
	cout<<"enter the value of b:";
	cin>>b;
	product=a*b;
	cout<<"product of a  and b is :"<<product;
	return  0;
	
}




