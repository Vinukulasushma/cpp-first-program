#include<iostream>
using namespace std;

int main()
{
	cout<< "Size of char:" <<sizeof(char) << " byte"<<"\n";
	cout<< "Size of int:" <<sizeof(int) << "  bytes"<<"\n";
	cout<< "Size of float:" <<sizeof(float) << " bytes"<<"\n";
	cout<< "Size of double:" <<sizeof(double) << " bytes"<<"\n";
	return  0;
	
}



